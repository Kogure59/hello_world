upstream unicorn {  # Pumaと連携させるための設定
    server unix:/home/ec2-user/var/www/raisetech-live8-sample-app/tmp/sockets/puma.sock;  
}

server {  # サーバの設定
    listen 80;

    access_log  /var/log/nginx/access.log;
    error_log   /var/log/nginx/error.log;

    root /var/www/raisetech-live8-sample-app/public;  # 接続が来た際のrootディレクトリ
    
    client_max_body_size 100m;  # クライアントからアップロードされてくるファイルの容量の上限を100メガに設定。
    error_page 404 /404.html;
    error_page 500 502 503 504 /500.html;
    try_files $uri/index.html $uri @puma;  # アクセスされたURLに応じて、ファイルを提供またはPumaサーバに処理を移譲。

    location @puma {  # Unicornサーバへのプロキシの設定
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $http_host;
        proxy_pass http://puma;  
    }
}